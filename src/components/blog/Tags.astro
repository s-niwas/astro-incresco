---
import { getPermalink } from "~/utils/permalinks";

import { BLOG } from "~/config.mjs";
import type { Post } from "~/types";

export interface Props {
  tags: Post["tags"];
  class?: string;
}

const { tags, class: className = "text-sm" } = Astro.props;
---

{
  tags && Array.isArray(tags) && (
    <ul class={className}>
      {tags.map((tag) => (
        <li class="mr-2 mb-2 inline-block bg-gray-100 py-0.5 px-2 font-medium lowercase dark:bg-slate-700">
          {BLOG?.tag?.disabled ? (
            tag
          ) : (
            <a
              href={getPermalink(tag, "tag")}
              class="text-muted hover:text-primary dark:text-slate-300 dark:hover:text-gray-200"
            >
              {tag}
            </a>
          )}
        </li>
      ))}
    </ul>
  )
}
