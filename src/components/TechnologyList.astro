---
import { Icon } from "astro-icon";
import type { TechnologyItem } from "~/types";

export interface Props {
  items: Array<TechnologyItem>;
}

const { items } = Astro.props;
---

<div class="w-full max-w-6xl space-y-2">
  <div class="relative border border-default bg-offset px-6 pt-8 pb-4">
    <ul class="grid grid-cols-3 gap-4 sm:grid-cols-3 md:grid-cols-6">
      {
        items.map((item) => (
          <li class="flex flex-col items-center gap-2">
            <Icon class="h-12" name={item.icon} />
            <span class="text-xs">{item.title}</span>
          </li>
        ))
      }
    </ul>
  </div>
</div>
