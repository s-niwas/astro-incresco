---
import { Icon } from "astro-icon";
import ContentSection from "~/components/ContentSection.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "Design",
    description:
      "We help people create digital experiences their customers love.",
    icon: "mdi:design",
  },
  {
    title: "Web Development",
    description:
      "We build apps to reach the widest possible audience base and pleasure to useâ€”from high-end MacBooks connected to fast WiFi networks to low-end Android phones with slow CPUs and flaky 3G connections.",
    icon: "mdi:monitor-mobile-phone-star",
  },
  {
    title: "Mobile Application",
    description:
      "We create high-quality, well-tested, maintainable, and future-ready cross platform apps that your engineers will love, and users deserve.",
    icon: "carbon:application-mobile",
  },
  {
    title: "Design System",
    description:
      "We help you build reusable UI components with React and features that serve as an extension of your product that is modular and well-documented.",
    icon: "mdi:react",
  },
  {
    title: "Cloud Computing",
    description:
      "We help you to build products in cloud and also consult on migration from existing infrastructure to AWS, Azure or Google Cloud.",
    icon: "eos-icons:cloud-computing-outlined",
  },
  {
    title: "Sales CRM",
    description:
      "We help you build to scalable CRM system using salesforce lightning platform.",
    icon: "fa-brands:salesforce",
  },
];
---

<ContentSection title="How can we help you?" id="services">
  <Fragment slot="lead">
    Our services are focussed on innovation which helps transform a product
    vision into successful real-world design
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="border-default bg-offset m-3 flex flex-col items-center gap-4 border p-6">
          <div class="m-2 h-24 w-24  rounded-full ">
            <Icon name={icon} />
          </div>
          <p class="text-center text-xl font-extrabold">{title}</p>
          <p class="text-offset text-center text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
