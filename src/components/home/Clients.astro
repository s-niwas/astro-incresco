---
import ContentSection from "~/components/home/ContentSection.astro";
import Stats from "~/components/home/Stats.astro";
import ClientsNew from "./ClientsNew.astro";

const { clientSection } = Astro.props;
const { clients, serviceServed, clientTopSection } = clientSection[0];
---

<ContentSection title={clientTopSection[0]?.title} id="clients">
  <Stats items={serviceServed} />
  <article class="flex w-full overflow-x-hidden bg-white">
    <ClientsNew />
  </article>
</ContentSection>
