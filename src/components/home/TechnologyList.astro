---
import { Icon } from "astro-icon";

export interface Props {
  items: any;
}

const { items } = Astro.props;
---

<div class="w-full max-w-6xl space-y-2">
  <div class="relative border border-default bg-offset px-4 pb-4 pt-8">
    <ul class="grid grid-cols-3 gap-4 sm:grid-cols-3 md:grid-cols-6">
      {
        items?.map((item: any) => (
          <li class="flex flex-col items-center gap-1">
            <Icon class="h-12" name={item?.icon?.icon || "mdi:react"} />
            <span class="text-xs">{item?.title}</span>
          </li>
        ))
      }
    </ul>
  </div>
</div>
