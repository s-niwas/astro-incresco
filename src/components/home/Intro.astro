---
import { Icon } from "astro-icon";
import ContentSection from "~/components/home/ContentSection.astro";
import Steps from "./Steps.astro";

const { featureSection } = Astro.props;
const { communicateSection, featureTopSection, features } = featureSection[0];
---

<ContentSection title={featureTopSection[0]?.title} id="about">
  <Steps features={features} />

  <Fragment slot="lead">
    {featureTopSection[0]?.subTitle}
  </Fragment>
  <a
    href={communicateSection[0]?.url}
    class="flex items-center justify-center gap-3 border-2 border-current px-6 py-4 hover:scale-110"
  >
    <Icon name={communicateSection[0]?.icon?.icon} class="h-8" />
    <span>{communicateSection[0]?.buttonText}</span>
  </a>
</ContentSection>
