---
import { Icon } from "astro-icon";
import ContentSection from "~/components/home/ContentSection.astro";
import Stats from "~/components/home/Stats.astro";
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";
import { useStoryblokApi } from "@storyblok/astro";

const storyblokApi = useStoryblokApi();
let content;
try {
  const { data } = await storyblokApi.get("cdn/stories/core-beliefs", {
    version: import.meta.env.DEV ? "draft" : "published",
  });
  content = data.story.content;
} catch (error) {}
---

<ContentSection title="Dream to Digital" id="about">
  <StoryblokComponent blok={content} />
  <Fragment slot="lead">
    Don't settle for less when it comes to your application's performance and
    cost efficiency â€“ choose our serverless stack today.
  </Fragment>
  <a
    href="#contact"
    class="flex items-center justify-center gap-3 border-2 border-current px-6 py-4 hover:scale-110"
  >
    <Icon pack="mdi" name="rocket" class="h-8" />
    <span>Talk to us</span>
  </a>
</ContentSection>
