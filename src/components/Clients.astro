---
import ContentSection from "~/components/ContentSection.astro";
import { Image } from "@astrojs/image/components";
import { getShowcase } from "~/data/showcase";

const sites = await getShowcase();
---

<ContentSection title="Customers around the world" id="clients">
  <article
    class="whitespace-no-wrap flex w-full max-w-6xl overflow-x-hidden bg-white"
  >
    <section class="overflow-hidden text-neutral-700">
      <div class="container mx-auto max-w-6xl px-5 py-2 lg:px-32 lg:pt-12">
        <div class="-m-1 flex flex-wrap md:-m-2">
          {
            sites.map((site) => (
              <div class="flex w-1/3 flex-wrap justify-center">
                <div class="p-4 md:w-1/3 md:p-1">
                  <Image
                    src={site.image}
                    alt={site.title}
                    height={100}
                    alt="gallery"
                    class="block h-full w-full rounded-lg bg-cover object-contain "
                  />
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>
  </article>
</ContentSection>
